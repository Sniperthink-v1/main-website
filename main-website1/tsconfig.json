{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@6LayerLP/app/*": ["./app/6LayerLP/*"],
      "@6LayerLP/lib/*": ["./lib/6LayerLP/*"],
      "@6LayerLP/hooks/*": ["./hooks/6LayerLP/*"],
      "@6LayerLP/data/*": ["./data/6LayerLP/*"],
      "@6LayerLP/types/*": ["./types/6LayerLP/*"],
      "@6LayerLP/styles/*": ["./styles/6LayerLP/*"],
      "@6LayerLP/public/*": ["./public/6LayerLP/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
